<mvc:View xmlns:core="sap.ui.core" 
controllerName="treinamento.l4e.app.controller.CadastroDoacoes" 
xmlns:form="sap.ui.layout.form" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m">

    <Page showHeader="true" title="Cadastro de Doacoes" titleAlignment="Center">
        <content>
            <form:Form >
                <form:title>
                    <core:Title text="Preencha os campos necessários" level="H6" ></core:Title>
                </form:title>
                <form:layout>
                    <form:ColumnLayout columnsL="3" columnsM="2" columnsXL="4"></form:ColumnLayout>
                </form:layout>
                <form:formContainers> 
                    <form:FormContainer >
                        <form:formElements>
                            <form:FormElement >
                                <form:label>
                                    <Label text="Nome" design="Bold"></Label>
                                </form:label>
                                <form:fields>
                                    <Input value="{Doacoe>/nome}"></Input>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:label>
                                    <Label text="Voluntário" design="Bold"></Label>
                                </form:label>
                                <form:fields>
                                    <ComboBox items="{Doacoe}" selectedKey="{Doacoe>/voluntario}">
                                        <items>
                                            <core:Item key="{text}" text="{text}" />
                                        </items>
                                    </ComboBox>
                                </form:fields>
                            </form:FormElement>

                             <form:FormElement >
                                <form:label>
                                    <Label text="Status" design="Bold"></Label>
                                </form:label>
                                <form:fields>
                                    <Switch type="AcceptReject" change="onChangeSwitch" state="{= ${Doacoe>/status} === 'A' ? true : false}"></Switch>
                                </form:fields>
                            </form:FormElement>
                        
                        </form:formElements>
                    </form:FormContainer>
                
                </form:formContainers> 
            </form:Form>
        </content>
        <footer>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Confirmar" type="Emphasized" press="onConfirmar"/>
                <Button text="Cancelar" type="Reject" press="onCancelar"/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>
		
</mvc:View>
