<mvc:View
	controllerName="treinamento.l4e.app.controller.Inicio"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:core="sap.ui.core">
	<Page showHeader="true" titleAlignment="Center">
    <content>
    <Panel
		id="gridLayout"
		width="100%"
		height="100%">
		<headerToolbar >
			<OverflowToolbar height="3rem">
                <ToolbarSpacer/>
				<Title text=" Para o dia de hoje: {dataAtual>/data}"/>
                <ToolbarSpacer/>
			</OverflowToolbar>
		</headerToolbar>

		<grid:CSSGrid
			id="grid1"
			gridTemplateColumns="1fr 2fr 1fr"
			gridTemplateRows="50px 200px 50px"
			gridGap="1rem">
			<core:HTML content='&lt;aside  class=&quot;stylePageLayout&quot;&gt;Recolhimento de doações &lt;/aside &gt;' />
			<core:HTML content='&lt;article class=&quot;stylePageLayout&quot;&gt;Entregas&lt;/article&gt;' />
		</grid:CSSGrid>
	</Panel>
    </content>
    </Page>
</mvc:View>