<mvc:View
controllerName="treinamento.l4e.app.controller.Inicio"
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
xmlns:grid="sap.ui.layout.cssgrid"
xmlns:core="sap.ui.core">
<Page showHeader="true" titleAlignment="Center">
<content>
    <Panel
		id="gridLayout"
		width="100%"
		height="100%">
		<headerToolbar >
			<OverflowToolbar height="3rem">
                <ToolbarSpacer/>
				<Title text=" Hoje é dia: {dataAtual>/data}"/>
                <ToolbarSpacer/>
			</OverflowToolbar>
		</headerToolbar>

        <FlexBox
            height="100px"
            alignItems="Start"
            justifyContent="Center">
        
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Data recolhimento das doações" press="onPressConsultaCalendarioDoacoes">
		<TileContent>
			<ImageContent src="sap-icon://calendar" />
		</TileContent>
	    </GenericTile>
        	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Consulta de entregas" press="onPressConsultaCalendarioEntregas">
		<TileContent>
			<ImageContent src="sap-icon://calendar" />
		</TileContent>
	    </GenericTile>
        </FlexBox>
	</Panel>
</content>
</Page>
</mvc:View>