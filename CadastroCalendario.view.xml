xmlns:form="sap.ui.layout.form" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m">

    <Page showHeader="true" title="Cadastro de Calendário" titleAlignment="Center">
        <content>
            <form:SimpleForm title="Informações de Calendário" editable="true">
                 <Label text="Data de recolhimento das doações"></Label>
                    <DatePicker>
                    </DatePicker>

                <Label text="Data de entrega das marmitas"></Label>
                    <DatePicker>
                    </DatePicker>

                <Label text="Data para cadastrar de necessitados"></Label>
                    <DatePicker>
                    </DatePicker>

            </form:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Confirmar" type="Emphasized" press="onConfirmar"/>
                <Button text="Cancelar" type="Reject" press="onCancelar"/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>
		
</mvc:View>
